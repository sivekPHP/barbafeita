{% extends 'painel.html.twig' %}

{% block body %}
    <h1>Serviço</h1>

    <div class="row">
        <div class="col-md-8">

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Nome</th>
                        <td>{{ servico.nome }}</td>
                    </tr>
                    <tr>
                        <th>Descrição</th>
                        <td>{{ servico.descricao }}</td>
                    </tr>
                    <tr>
                        <th>Valor</th>
                        <td>{{ servico.valor }}</td>
                    </tr>
                    <tr>
                        <th>Duração</th>
                        <td>{{ servico.duracao }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-success pull-right" href="{{ path('servico_edit', { 'id': servico.id }) }}">Editar</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Deletar" class="btn btn-danger pull-left">
            {{ form_end(delete_form) }}
        </div>
    </div>
    
{% endblock %}
