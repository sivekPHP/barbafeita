{% extends 'painel.html.twig' %}

{% block body %}
    <h1>Serviços <a class="btn btn-success pull-right" href="{{ path('servico_new') }}">Novo</a></h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th><a href='?ordenar=nome'>Nome</a></th>
                <th><a href='?ordenar=descricao'>Descrição</a></th>
                <th><a href='?ordenar=valor'>Valor</a></th>
                <th><a href='?ordenar=duracao'>Duração</a></th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for servico in servicos %}
            <tr>
                <td>{{ servico.nome }}</td>
                <td>{{ servico.descricao }}</td>
                <td>R$ {{ servico.valor }}</td>
                <td>{{ servico.duracao }} minutos </td>
                <td>
                    <a class="btn btn-default" href="{{ path('servico_show', { 'id': servico.id }) }}">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="{{ path('servico_edit', { 'id': servico.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
