{% extends 'painel.html.twig' %}

{% block body %}
    <h1>Barbeiros<a class="btn btn-success pull-right" href="{{ path('barbeiro_new') }}">Novo</a></h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Sexo</th>
                <th>Data Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for barbeiro in barbeiros %}
            <tr>
                <td>{{ barbeiro.nome|upper }}</td>
                <td>{{ barbeiro.telefone }}</td>
                <td>{% if barbeiro.sexo == 'M' %}
                        Masculino
                    {% elseif barbeiro.sexo == 'F' %}
                        Feminino
                    {% else %}
                        Indefinido
                    {% endif %}
                </td>
                <td>{% if barbeiro.dataNascimento %}{{ barbeiro.dataNascimento|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('barbeiro_show', { 'id': barbeiro.id }) }}">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="{{ path('barbeiro_edit', { 'id': barbeiro.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
