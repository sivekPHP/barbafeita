{% extends 'painel.html.twig' %}

{% block body %}
    <h1>Barbeiros</h1>

    <div class="row">
        <div class="col-md-8">

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Nome</th>
                        <td>{{ barbeiro.nome }}</td>
                    </tr>
                    <tr>
                        <th>Servi√ßos</th>
                        <td>{{ barbeiro.servico }}</td>
                    </tr>
                    <tr>
                        <th>Telefone</th>
                        <td>{{ barbeiro.telefone }}</td>
                    </tr>
                    <tr>
                        <th>Sexo</th>
                        <td>{{ barbeiro.sexo }}</td>
                    </tr>
                    <tr>
                        <th>Data de Nascimento</th>
                        <td>{% if barbeiro.dataNascimento %}{{ barbeiro.dataNascimento|date('d/m/Y') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-success pull-right" href="{{ path('barbeiro_edit', { 'id': barbeiro.id }) }}">Editar</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Deletar" class="btn btn-danger pull-left">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
