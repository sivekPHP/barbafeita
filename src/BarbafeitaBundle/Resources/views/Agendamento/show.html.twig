{% extends 'painel.html.twig' %}

{% block body %}
    <h1>Agendamento</h1>

    <div class="row">
        <div class="col-md-8">

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Hor√°rio</th>
                        <td>{% if agendamento.horario %}{{ agendamento.horario|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Nome</th>
                        <td>{{ agendamento.nome }}</td>
                    </tr>
                    <tr>
                        <th>Telefone</th>
                        <td>{{ agendamento.telefone }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ agendamento.email }}</td>
                    </tr>
                    <tr>
                        <th>Data de Cadastro</th>
                        <td>{% if agendamento.dataCadastro %}{{ agendamento.dataCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Data de Operacao</th>
                        <td>{% if agendamento.dataOperacao %}{{ agendamento.dataOperacao|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ agendamento.status }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
