{% extends 'painel.html.twig' %}

{% block body %}
    <h1>Usu√°rios<a class="btn btn-success pull-right" href="{{ path('usuario_new') }}">Novo</a></h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Login</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.username }}</td>
                <td>{{ usuario.nome }}</td>
                <td>{{ usuario.email }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('usuario_show', { 'id': usuario.id }) }}">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-default" href="{{ path('usuario_edit', { 'id': usuario.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
